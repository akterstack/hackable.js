{
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "module": "es2015",
    "moduleResolution": "classic",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "lib"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
